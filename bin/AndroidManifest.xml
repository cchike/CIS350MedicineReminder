<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.upenn.medicinereminder"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        
        <activity
            android:name="edu.upenn.medicinereminder.HomeActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="edu.upenn.medicinereminder.UserInfoActivity"></activity>
        <activity android:name="edu.upenn.medicinereminder.Appointments"></activity>
        <activity android:name="edu.upenn.medicinereminder.SetReminderActivity"></activity>
        <activity android:name="edu.upenn.medicinereminder.MedicationActivity"></activity>
        
    </application>

</manifest>